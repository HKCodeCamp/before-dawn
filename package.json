{
  "name": "before-dawn",
  "version": "0.9.1",
  "description": "A desktop screensaver app using web technologies",
  "author": "Colin Mitchell",
  "scripts": {
    "postinstall": "install-app-deps",
    "pack": "build --dir",
    "dist": "build --x64"
  },
  "devDependencies": {
    "electron-builder": "5.12.1",
    "electron-prebuilt": "1.4.13"
  },
  "build": {
    "appId": "Before Dawn",
    "app-category-type": "public.app-category.entertainment",
    "nsis": {
      "installerIcon": "build/icon.ico",
      "verbosity": 1,
      "perMachine": "false"
    },
    "win": {
      "target": "nsis",
      "iconUrl": "https://raw.githubusercontent.com/muffinista/before-dawn/master/assets/icon.ico"
    },
    "asar": "false",
    "dmg": {
      "contents": [
        {
          "x": 338,
          "y": 14,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 192,
          "y": 14,
          "type": "file"
        }
      ]
    },
    "linux": {
      "arch": 64,
      "target": "deb",
      "title": "Before Dawn",
      "executable": "before-dawn",
      "comment": "Before Dawn",
      "maintainer": "Colin Mitchell <colin@muffinlabs.com>"
    }
  }
}
